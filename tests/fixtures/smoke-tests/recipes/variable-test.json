{
  "name": "variable-test-debug",
  "description": "debug recipe",
  "version": "1.0.0",
  "parameters": {
    "message": {
      "type": "string",
      "default": "default message"
    }
  },
  "steps": [
    {
      "name": "built-ins",
      "operation": "report",
      "message": "Time=${NOW}, Workspace=${WORKSPACE}"
    },
    {
      "name": "params",
      "operation": "report",
      "message": "Message=${parameters.message}"
    }
  ]
}