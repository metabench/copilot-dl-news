{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Crawl Sequence Configuration (v1)",
  "type": "object",
  "required": ["steps"],
  "properties": {
    "version": {
      "type": "string"
    },
    "host": {
      "type": "string",
      "minLength": 1
    },
    "startUrl": {
      "type": "string",
      "minLength": 1
    },
    "sharedOverrides": {
      "type": "object"
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "oneOf": [
          {
            "type": "string",
            "minLength": 1
          },
          {
            "type": "object",
            "required": ["operation"],
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              },
              "label": {
                "type": "string",
                "minLength": 1
              },
              "operation": {
                "type": "string",
                "minLength": 1
              },
              "name": {
                "type": "string",
                "minLength": 1
              },
              "startUrl": {
                "type": "string",
                "minLength": 1
              },
              "overrides": {
                "type": "object"
              },
              "continueOnError": {
                "type": "boolean"
              }
            },
            "additionalProperties": true
          }
        ]
      }
    }
  },
  "additionalProperties": true
}
