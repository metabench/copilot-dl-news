{
  "name": "news_crawler",
  "version": "0.0.11",
  "description": "A web crawler for news articles with navigation detection",
  "main": "src/crawl.js",
  "scripts": {
    "start": "node src/crawl.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles --reporters=default --reporters=./jest-timing-reporter.js",
    "test:timing": "node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles --reporters=default --reporters=./jest-timing-reporter.js",
    "test:file": "node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles --reporters=default --reporters=./jest-timing-reporter.js --testPathPattern",
    "test:fast": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathIgnorePatterns='e2e|online|puppeteer|http.test.js' --maxWorkers=4",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathIgnorePatterns='e2e|online|puppeteer|http'",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern='http.test.js'",
    "test:e2e": "UI_E2E=1 node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern='e2e|puppeteer'",
    "test:online": "ONLINE_TESTS=1 node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern='online'",
    "test:all": "node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles",
    "gui": "node server.js",
    "gui:detached": "node server.js --detached --auto-shutdown-seconds",
    "ui:capture-screens": "node src/tools/capture-ui-screenshots.js",
    "backfill:dates": "node src/tools/backfill-dates.js",
    "backfill:dates:redo": "node src/tools/backfill-dates.js --redo",
    "analyze:domains": "node src/tools/analyze-domains.js",
    "analyze:pages": "node src/analyse-pages.js",
    "analysis:run": "node src/tools/analysis-run.js",
    "populate:gazetteer": "node src/tools/populate-gazetteer.js --import-adm1=1 --import-cities=1 --cities-per-country=50 --include-blocs=ALL",
    "export:gazetteer": "node src/tools/export-gazetteer.js",
    "validate:gazetteer": "node src/tools/validate-gazetteer.js",
    "sass:build": "sass src/ui/express/public/styles/crawler.scss:src/ui/express/public/crawler.css src/ui/express/public/styles/ui.scss:src/ui/express/public/ui.css src/ui/express/public/styles/ui-dark.scss:src/ui/express/public/ui-dark.css --no-source-map",
    "sass:watch": "sass src/ui/express/public/styles/crawler.scss:src/ui/express/public/crawler.css src/ui/express/public/styles/ui.scss:src/ui/express/public/ui.css src/ui/express/public/styles/ui-dark.scss:src/ui/express/public/ui-dark.css --no-source-map --watch",
    "components:build": "node scripts/build-components.js",
    "components:watch": "node scripts/build-components.js --watch",
    "ui:build": "node scripts/build-ui.js",
    "benchmarks": "node tools/benchmarks/run.js"
  },
  "keywords": [
    "crawler",
    "news",
    "scraping",
    "theguardian"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@mozilla/readability": "^0.5.0",
    "better-sqlite3": "^12.2.0",
    "cheerio": "^1.1.2",
    "compression": "^1.7.4",
    "express": "^5.0.0",
    "fast-xml-parser": "^4.3.6",
    "jsdom": "^24.0.0",
    "lang-tools": "^0.0.39",
    "node-fetch": "^3.3.2",
    "robots-parser": "^3.0.1",
    "tar-stream": "^3.1.7"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "babel-jest": "^29.7.0",
    "esbuild": "^0.24.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "puppeteer": "^22.11.0",
    "sass": "^1.93.2",
    "sharp": "^0.34.4",
    "supertest": "^6.3.4"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "reporters": [
      "default",
      "<rootDir>/jest-reporter-truncate.js"
    ],
    "maxWorkers": 8,
    "testTimeout": 10000,
    "slowTestThreshold": 2,
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  }
}
