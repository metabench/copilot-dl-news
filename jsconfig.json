{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "maxNodeModuleJsDepth": 0,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2020",
    "module": "ES2020"
  },
  "include": [
    "src/**/*",
    "tools/**/*",
    "scripts/**/*",
    ".vscode/**/*",
    "*.js",
    "*.cjs",
    "*.mjs"
  ],
  "exclude": [
    "**/.git/**",
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/coverage/**",
    "build/analysis-charts/**",
    "crawl-widget/**",
    "data/**",
    "deprecated-ui-root/**",
    "design/**",
    "docs/**",
    "gazetteer-backup/**",
    "migration-*/**",
    "public/**",
    "recipes/**",
    "screenshots/**"
  ]
}
